                        <br>
                        <i class="fa-solid fa-clock"></i>
                        <li class="timePeriodStyle poppins-regular">3 hours</li>
                   
                    </ul> 
                </div>
    
            </div>
    
            <div id="verticalLine2" class="verticalLine hidden"></div>
    
            <div class="date hidden">
                 <p class="poppins-regular">Date</p>
                <input class="addDates poppins-regular" name="addDates" type="text" placeholder="Add dates">
            
            </div>
            
            <div class="searchIcon poppins-regular ">
                <i class="fa-solid fa-magnifying-glass"></i>
                <p class="nbsp hidden">&nbsp;</p>
            </div>
     
        </div>
    
        <div class="mapContainer hidden">
