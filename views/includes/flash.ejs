<!-- they are displayed at the top and are added in boilerplate.ejs -->

<div class="fadeIn" >
    
    <% if( success && success.length ){ %> 
        <div class="alert alert-warning alert-dismissible fade show col-8 offset-2" role="alert">
            <div class="flashText Inter">
                <%= success %>
            </div>

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    <% } %>     
      
     
    <!-- for error -->
    <% if( error && error.length ){ %> 
        <div class="alert alert-warning alert-dismissible fade show col-8 offset-2" role="alert">
            <div class="flashText Inter">
                <%= error %>
            </div>
            
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>   
    
    <!-- for info -->
    <% if( info && info.length ){ %> 
        <div class="alert alert-info alert-dismissible fade show col-8 offset-2" role="alert">
            <div class="flashText Inter">
                <%= info %>
            </div>

            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>  
</div>
