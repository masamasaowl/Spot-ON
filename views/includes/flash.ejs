<% if( success && success.length ){ %> 
    <div class="alert alert-success alert-dismissible fade show col-8 offset-2" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>   

<!-- for error -->
<% if( error && error.length ){ %> 
    <div class="alert alert-warning alert-dismissible fade show col-8 offset-2" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>   

<!-- for info -->
<% if( info && info.length ){ %> 
    <div class="alert alert-info alert-dismissible fade show col-8 offset-2" role="alert">
        <%= info %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>  

